<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bitwin.bangbang.store.dao.StoreDao">

	<!-- 가맹점 등록 -->
	<insert id="insertStore"
		parameterType="com.bitwin.bangbang.store.domain.Store"
		useGeneratedKeys="true" keyProperty="sidx">
		insert into store (storeid,
		storepw, sname, sphone, address, oname, ophone, regnum ) values
		(#{storeId}, #{storePw}, #{sname}, #{sphone}, #{address}, #{oname},
		#{ophone}, #{regnum})
	</insert>
	
	<!-- 모든 가맹점 정보 가져오기 -->
	<select 
		id="selectAll"
		resultType="com.bitwin.bangbang.store.domain.Store"
		>
		select * from store
		</select>
</mapper>